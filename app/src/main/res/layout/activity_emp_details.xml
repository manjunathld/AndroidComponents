<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmpDetailsActivity">

    <TextView
        android:id="@+id/tv_emp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_emp_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_emp_name"
        app:layout_constraintStart_toStartOf="@+id/tv_emp_name" />

    <TextView
        android:id="@+id/tv_emp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_emp_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_emp_name"
        app:layout_constraintStart_toStartOf="@+id/tv_emp_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_emp_name" />

</androidx.constraintlayout.widget.ConstraintLayout>